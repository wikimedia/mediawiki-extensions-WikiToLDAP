{
	"name": "mediawiki/wiki-to-ldap",
	"extra": {
		"installer-name": "WikiToLDAP"
	},
	"license": "GPL-3.0+",
	"type": "mediawiki-extension",
	"homepage": "https://www.mediawiki.org/wiki/Extension:WikiToLDAP",
	"description": "Provides a way to migrate wiki users to LDAP-backed users",
	"keywords": [
		"extension",
		"wiki",
		"mediawiki",
		"ldap"
	],
	"authors": [
		{
			"name": "Mark A. Hershberger",
			"email": "mah@nichework.com",
			"role": "Developer"
		}
	],
	"require": {
		"mediawiki/ldap-authentication-2": "~1.0"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "^31.0",
		"mediawiki/minus-x": "1.1.0",
		"php-parallel-lint/php-console-highlighter": "0.5.0",
		"php-parallel-lint/php-parallel-lint": "1.2.0",
		"mediawiki/phan-taint-check-plugin": "3.1.1",
		"mediawiki/mediawiki-phan-config": "^0.10.5"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"phpcs -p -s --report=emacs",
			"phan -m text --target-php-version 7.3 --no-progress-bar | sed 's, ,:,'",
			"minus-x check ."
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	}
}
